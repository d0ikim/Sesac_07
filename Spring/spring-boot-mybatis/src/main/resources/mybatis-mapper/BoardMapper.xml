<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="codingon.spring_boot_mybatis.mapper.BoardMapper">
    <select id="findAll" resultType="codingon.spring_boot_mybatis.domain.Board">
        SELECT * FROM board
    </select>
    <select id="findByWriter" parameterType="String" resultType="codingon.spring_boot_mybatis.domain.Board">
        SELECT * FROM board WHERE writer = #{writer}
    </select>
    <insert id="insert" parameterType="codingon.spring_boot_mybatis.domain.Board" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO board (title, content, writer) VALUES (#{title}, #{content}, #{writer})
    </insert>
    <update id="update" parameterType="codingon.spring_boot_mybatis.domain.Board">
        UPDATE board SET title = #{title}, content = #{content}, writer = #{writer} WHERE id = #{id}
    </update>
    <delete id="delete" parameterType="int">
        DELETE FROM board WHERE id = #{id}
    </delete>
</mapper>